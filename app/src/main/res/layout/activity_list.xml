<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="AppStart"
    android:background="@drawable/background_gradient">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="100sp"
            android:layout_height="100sp"
            android:transitionName="IconStartAnim"
            app:srcCompat="@drawable/earthquake" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/salutation"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Welcome to Mobile Platform Development"
                android:textAlignment="center"
                android:textSize="15sp"
                android:transitionName="TitleStartAnim" />

            <TextView
                android:id="@+id/acknowledgement"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Contains British Geological Survey materials Â©NERC 2019"
                android:textAlignment="center"
                android:textSize="15sp"
                android:transitionName="SubtitleStartAnim" />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragmentList"
        class="org.me.MobilePlatformDev_EarthquakeApp.EarthquakeListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />
</LinearLayout>