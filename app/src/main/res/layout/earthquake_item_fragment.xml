<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/earthquake_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="5sp"
        android:background="@drawable/rounded_corners_medium"
        android:orientation="horizontal"
        android:paddingBottom="5sp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10sp"
            android:paddingBottom="5sp">

            <ImageView
                android:id="@+id/earthquakeStrengthIcon"
                android:layout_width="75sp"
                android:layout_height="75sp"
                android:layout_gravity="center"
                android:paddingRight="0dp"
                app:srcCompat="@drawable/icon_drawable" />

            <TextView
                android:id="@+id/earthquakeStrengthValue"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_medium"
                android:backgroundTint="@color/lightGrey"
                android:shadowColor="@color/black"
                android:shadowRadius="5"
                android:text="-1.0"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/lightGrey"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:paddingLeft="0dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="15sp" />

            <TextView
                android:id="@+id/earthquakeLocation"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:text="Title"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/earthquakeDate"
                android:layout_width="fill_parent"
                android:layout_height="25sp"
                android:gravity="center"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="17sp" />

            <Space
                android:layout_width="fill_parent"
                android:layout_height="10sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20sp"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="10sp"
                android:background="@drawable/rounded_corners_small"
                android:backgroundTint="@color/purple_700"
                android:gravity="center"
                android:text="Press to view more information..."
                android:textAlignment="center"
                android:textColor="@color/lightGrey"
                android:textSize="15sp"
                android:textStyle="italic" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>