<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background_gradient"
    android:gravity="center"
    android:orientation="vertical">

    <!--  -->

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="250sp"
        android:layout_height="250sp"
        android:transitionName="IconStartAnim"
        app:srcCompat="@drawable/earthquake" />

    <LinearLayout
        android:id="@+id/headerBackground"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10sp"
        android:layout_marginRight="10sp"
        android:background="@drawable/rounded_corners_medium"
        android:orientation="vertical"
        android:paddingLeft="10sp"
        android:paddingTop="5sp"
        android:paddingRight="10sp"
        android:paddingBottom="5sp"
        android:transitionName="BackgroundStartAnim">

        <TextView
            android:id="@+id/headerTitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Welcome to Mobile Platform Development"
            android:textAlignment="center"
            android:textSize="18sp"
            android:transitionName="TitleStartAnim" />

        <TextView
            android:id="@+id/headerSubtitle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Contains British Geological Survey materials Â©NERC 2019"
            android:textAlignment="center"
            android:textSize="18sp"
            android:transitionName="SubtitleStartAnim" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="10sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/startListButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginRight="5sp"
            android:layout_weight="0.5"
            android:text="Press to switch to the earthquake list page"
            android:textAlignment="center"
            android:transitionName="ButtonStartAnim" />

        <Button
            android:id="@+id/startMapButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="10sp"
            android:layout_weight="0.5"
            android:text="Press to switch to the earthquake map page"
            android:textAlignment="center"
            android:transitionName="ButtonStartAnim" />

    </LinearLayout>

</LinearLayout>